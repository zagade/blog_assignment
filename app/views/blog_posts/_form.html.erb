<%= form_for :blog_post, url: blog_posts_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :post %><br>
    <%= f.text_area :post %>
  </p>
  <p>
    <%= f.select(:category, [['politics'], ['sports'], ['entertainment'], ['technology'], ['health'] ]) %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
